<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notification_small"
    >
    <ImageView
        android:id="@+id/notification_small_icon"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        />

        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/notification_small_song_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:layout_toEndOf="@id/notification_small_icon"
            android:layout_toStartOf="@id/notification_small_prev_btn"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/notification_small_artist_name"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:layout_toEndOf="@id/notification_small_icon"
            android:layout_toStartOf="@id/notification_small_prev_btn"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:textColor="@color/white"
            />

        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/notification_small_prev_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_round_skip_previous_24"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/notification_small_play_pause_btn"
            app:tint="@color/white"
            />
        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/notification_small_play_pause_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/notification_small_next_btn"
            app:tint="@color/white"
            />
        <ImageView
            android:id="@+id/notification_small_next_btn"
            android:layout_margin="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_round_skip_next_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:tint="@color/white"
            />

</RelativeLayout>