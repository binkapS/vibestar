<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/player_screen_main_body"
    android:animateLayoutChanges="true"
    tools:context=".screens.MusicPlayerScreen"
    >
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/player_screen_header"
        app:cardCornerRadius="0dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/player_header_app_logo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/vibe_star_logo_transparent_bg"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                app:tint="?attr/colorOnPrimary" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="?attr/colorOnPrimary"
                android:textAlignment="textStart"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/player_header_app_logo"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                />
            <ImageView
                android:id="@+id/playerScreen_search_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_round_search_24"
                android:layout_toStartOf="@id/player_screen_profile_icon"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                app:tint="?attr/colorOnPrimary" />
            <ImageView
                android:id="@+id/player_screen_profile_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_round_person_24"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_centerVertical="true"
                app:tint="?attr/colorOnPrimary" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
    <RelativeLayout
        android:id="@+id/player_screen_songs_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/player_screen_header"
        app:layout_constraintBottom_toTopOf="@id/player_screen_bottom_player"
        >

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/player_screen_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:textAlignment="center"
            app:tabMode="auto"
            app:tabSelectedTextColor="?attr/colorOnPrimary"
            app:tabIndicatorColor="?attr/colorOnPrimary"
            app:tabTextColor="@android:color/darker_gray"
            app:tabIconTint="?attr/colorOnPrimary"
            />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/player_screen_view_pager2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/player_screen_tab_layout" />
    </RelativeLayout>

    <androidx.core.widget.ContentLoadingProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:id="@+id/mini_player_song_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:progressTint="?attr/colorOnPrimary"
        android:background="?attr/colorPrimaryVariant"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/player_screen_bottom_player"
        />
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/player_screen_bottom_player"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:visibility="gone"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            >
            <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="15dp"
                android:id="@+id/mini_player_song_art_cover_frame"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                app:cardBackgroundColor="@color/gray_transparent"
                >
                <ImageView
                    android:id="@+id/mini_player_song_art_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_round_graphic_eq_24"
                    />
            </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

            <TextView
                android:id="@+id/mini_player_song_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="17sp"
                android:textAlignment="textStart"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/mini_player_song_art_cover_frame"
                app:layout_constraintBottom_toTopOf="@id/mini_player_song_artist"
                app:layout_constraintRight_toLeftOf="@id/mini_player_play_pause_button"
                />
            <TextView
                android:id="@+id/mini_player_song_artist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="11sp"
                android:textColor="?attr/colorOnPrimary"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:ellipsize="marquee"
                android:maxLines="1"
                app:layout_constraintTop_toBottomOf="@id/mini_player_song_name"
                app:layout_constraintLeft_toRightOf="@id/mini_player_song_art_cover_frame"
                app:layout_constraintRight_toLeftOf="@id/mini_player_play_pause_button"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <ImageView
                android:id="@+id/mini_player_play_pause_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/mini_player_next_button"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/app_name"
                app:tint="?attr/colorOnPrimary"
                />
            <ImageView
                android:id="@+id/mini_player_next_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_round_skip_next_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/app_name"
                app:tint="?attr/colorOnPrimary"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <RelativeLayout
        android:id="@+id/music_player_screen_exit_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:visibility="gone"
        >
        <RelativeLayout
            android:id="@+id/music_player_screen_exit_dialog_body"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_alignParentBottom="true"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/exit_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                app:cornerRadius="10dp"
                app:strokeWidth="3dp"
                app:strokeColor="?attr/colorOnPrimary"
                android:text="Exit"
                android:layout_alignParentBottom="true"
                tools:ignore="HardcodedText" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>