<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="120dp"
        android:layout_height="170dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_margin="2.5dp"
        >
    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/albums_grid_cover_frame"
        android:layout_alignParentTop="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/gray_transparent"
        >
        <ImageView
            android:id="@+id/albums_grid_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            />
    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/albums_grid_cover_frame"
            >
            <TextView
                android:id="@+id/albums_grid_album_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/app_name"
                android:ellipsize="marquee"
                android:maxLines="1"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/albums_grid_album_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/lorem_text"
                android:ellipsize="marquee"
                android:maxLines="1"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                />
        </RelativeLayout>
    </RelativeLayout>