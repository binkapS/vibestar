<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:id="@+id/songs_screen_main_body"
    tools:context=".screens.sub.SongsScreen">
    <RelativeLayout
        android:id="@+id/songs_screen_header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:id="@+id/songs_screen_back_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_round_arrow_back_24"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            app:tint="?attr/colorOnPrimary"
            />
        <com.google.android.material.circularreveal.cardview.CircularRevealCardView
            android:id="@+id/songs_screen_header_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:id="@+id/songs_screen_search_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_round_search_24"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            app:tint="?attr/colorOnPrimary" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/songs_screen_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/songs_screen_header"
        >
        <ImageView
            android:id="@+id/songs_screen_shuffle_play_all"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_round_shuffle_24"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            app:tint="?attr/colorOnPrimary" />
        <TextView
            android:id="@+id/songs_screen_header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/songs_screen_sort_button"
            android:layout_toEndOf="@id/songs_screen_shuffle_play_all"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />
        <ImageView
            android:id="@+id/songs_screen_sort_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_round_sort_24"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            app:tint="?attr/colorOnPrimary" />
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/songs_screen_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/songs_screen_tool_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>